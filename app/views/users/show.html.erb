<div class='item-contents'>
  <h2 class='title'><%= @nickname %>さんの投稿一覧</h2>
  <div class="subtitle" >
    マイページ
  </div>
  <ul class='item-lists'>
   <% if @recipes.present? %>
    <% @recipes.each do |recipe| %>
    <li class='list'>
      <%= link_to recipe_path(recipe) do %>
      <div class='item-img-content2'>
         <%= image_tag(recipe.image.variant(resize: '250x250'), class: 'card__img') if recipe.image.attached? %>
      </div>
      <div class='item-info'>
        <h3 class='item-name'>
          <%= recipe.recipe_title %>
          
        </h3>
        <div class='item-price'>
         <%= recipe.category.name %>
          <div class='star-btn'>
            <span class='star-count'><%= recipe.likes.count %>いいね</span>
          </div>
        </div>
      </div>
      <% end %>
    <% end %>
    </li>
  <% else %>
   <p>リストが空です。</p>
  <% end %>

