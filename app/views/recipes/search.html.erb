<div class="search_area">
  <div class="search_area">
   <h3>検索ページ</h3>
   <div class='item-contents' id="detailed-search-result-wrapper">
    <%= search_form_for @q, url: search_recipes_path, html: {id: "detailed-search-form"} do |f| %>
     <% end %>
     <ul class='item-lists' id="detailed-search-result">
      <% @recipes.each do |recipe| %>
        <li class='list'>
         <div class="posted_content">
          <%= link_to recipe_path(recipe) do %>
           <%= image_tag(recipe.image.variant(resize: '250x250'), class: 'card__img') %>
           <div class="search_title">
           <%= recipe.recipe_title%><br>
          </div>
          </div>
          <% end %>
       </li>
      <% end %>
    </ul>
  </div>
 </div>
</div>