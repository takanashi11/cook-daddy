  <body>
    <nav class="navbar navbar-dark bg-Secondary">
        <nav class="navbar fixed-top navbar-light bg-light">
            <div class="d-flex justify-content-between col-12 ">
                <div class="container">
                <%= link_to root_path, style: 'text-decoration: none; font-family: cursive;' do %>
                <h4 class="navbar-brand" href="#">Cook Daddy</h4>
                <% end %>
                <% if user_signed_in? %>
                 <%= "こんにちは、#{current_user.name}さん" %>
                   <% else %>
                    <p>ようこそゲストさん</p>
                   <% end %>
                  </div>
   
                
                <div class="container d-flex justify-content-end">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                        <a class="nav-link"><%= link_to '新規登録', new_user_registration_path,class:"nav-item text-decoration-none text-dark"%></a>
