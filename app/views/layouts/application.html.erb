                        <li class="nav-item">
                        <a class="nav-link" href="#"><%= link_to 'ログイン', user_session_path,class:"nav-item text-decoration-none text-dark"%></a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true"><%= link_to 'ログアウト', destroy_user_session_path, method: :delete,class:"nav-item text-decoration-none text-dark"%></a>
                        </li>
                        <li class="nav-item">
                          <a class="nav-link"><%= link_to 'レシピを投稿する', new_recipe_path,class:"nav-item text-decoration-none text-dark"%></a>
                        </li>
                    </ul>
                    </div>
                </div>
            </div>
        </nav>
    </nav>

